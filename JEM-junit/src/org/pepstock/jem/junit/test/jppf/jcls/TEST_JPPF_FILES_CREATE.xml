<?xml version="1.0"?>
<project name="TEST_JPPF_FILES_CREATE" default="sample-file">
	<description>
		This job creates JPPF.CONFIG for connection from client and a file to use during the tests
    </description>

	<!--
	JEM properties definition
	-->
	<property name="jem.job.name" value="TEST_JPPF_FILES_CREATE"/>
	<property name="jem.job.environment" value="TEST-Env"/>
	
	<!--
	ANT task definition
	-->
	<taskdef name="icegener" classname="org.pepstock.jem.ant.tasks.utilities.CopyTask" />

	<!-- 
	JPPF-CONFIG: creates the JPPF properties file
	-->
	<target name="jppf-config">
		<icegener>
			<dataDescription name="OUTPUT" disposition="NEW">
				<dataSet name="test_jppf/jppf.config"/>
			</dataDescription>

			<dataDescription name="INPUT" disposition="SHR">
				<dataSet>#
#jppf.ssl.enabled=true
jppf.discovery.enabled=false
jppf.drivers=main
main.jppf.server.port=11111
main.jppf.server.host=localhost</dataSet>
			</dataDescription>

		</icegener>
	</target>

