<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/batch 
           http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

	<beans:bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<beans:property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	    <beans:property name="ignoreUnresolvablePlaceholders" value="true"/>
	</beans:bean>
    
    <beans:import resource="file:${jem.classpath}/test/TO-BE-IMPORTED.xml"/>
    
	<!-- 
		Jem Props
	 -->

	<beans:bean id="jem.bean" class="org.pepstock.jem.springbatch.JemBean">
		<beans:property name="jobName" value="IEFBR14" />
		<beans:property name="environment" value="TEST-Env" />
        <beans:property name="classPath" value="${jem.classpath}/test}" />
	</beans:bean>

	<beans:bean id="jem.listener" class="org.pepstock.jem.springbatch.tasks.StepListener"/>

	<!-- 
		Tasklet Defintion
	 -->

	<beans:bean id="null" class="org.pepstock.jem.springbatch.tasks.utilities.EchoTasklet">
		<beans:property name="bean" ref="jem.bean" />
	</beans:bean>

	<!-- 
		Job abstract definition necessary for integration with JEM
	 -->
	<job id="jem.baseJob" abstract="true">
    	<listeners>
        	<listener ref="jem.listener"/>
    	</listeners>
	</job>

	<step id="jem.baseStep" abstract="true">
		<tasklet>
    		<listeners>
        		<listener ref="jem.listener"/>
    		</listeners>
    	</tasklet>
	</step>

	<!-- 
		null: does nothing
	 -->
	<job id="NULL" parent="jem.baseJob">
		<step id="nothing" parent="jem.baseStep">
			<tasklet ref="null" />
		</step>
	</job>
	
</beans:beans>