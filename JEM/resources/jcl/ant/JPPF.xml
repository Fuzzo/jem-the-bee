<?xml version="1.0"?>
<project basedir="." default="execute">

	<property name="jem.job.name" value="JPPF"/>
	<property name="jem.job.environment" value="TEST-Env"/>
	
	<taskdef name="jppf" classname="org.pepstock.jem.jppf.StepJPPF"/>
		
	<target name="execute">
		<echo message="Entering jppf task..." />
		<jppf runnable="org.pepstock.jem.jppf.test.MyJPPFTask" parallelTaskNumber="5" datasource="jppf">
		<!--jppf runnable="org.pepstock.jem.jppf.test.MyRunnable" address="localhost:11111"
			parallelTaskNumber="5"-->
			<dataSource name="DB" resource="Stock"/>
			
			<dataSource name="localhost" resource="FTPlocalhost">
				<!--property name="binary">true</property-->
			</dataSource>
			
			<dataSource name="jppf" resource="JPPFLocalhost">
				<!--property name="binary">true</property-->
			</dataSource>
			
			<dataDescription name="JPPF-CONFIG-i" disposition="SHR">
				<dataset>
#jppf.ssl.enabled=true
jppf.discovery.enabled=false
jppf.drivers=main
main.jppf.server.port=11111
main.jppf.server.host=localhost
				</dataset>	
			</dataDescription>

			<dataDescription name="INPUT1" disposition="SHR">
				<dataSet name="00035" datasource="localhost"/>
				<!--dataset>
					These records are added to OUTPUT file:
					Record1 test abcdefghjklilmnopqrstuvzxw
					Record2 test abcdefghjklilmnopqrstuvzxw
					Record3 test abcdefghjklilmnopqrstuvzxw
				</dataset-->	
			</dataDescription>
			
			<dataDescription name="INPUT" disposition="SHR">
				<dataSet name="gdg/jemtest(0)"/>
				<dataSet name="gdg/stock"/>
				<!--dataset>
					These records are added to OUTPUT file:
					Record1 test abcdefghjklilmnopqrstuvzxw
					Record2 test abcdefghjklilmnopqrstuvzxw
					Record3 test abcdefghjklilmnopqrstuvzxw
				</dataset-->	
			</dataDescription>
			<dataDescription name="OUTPUT" disposition="NEW">
				<dataSet name="gdg/stock1"/>
			</dataDescription>
			
		</jppf>	
	</target>

</project>
