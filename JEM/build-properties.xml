<project name="jem-properties" basedir=".">
	<!-- 
	Creates all properties used inside the build for JEM core project
	Many of these properties are based on the common ones 
	-->
	<!-- import common properties -->
	<import file="build-common-properties.xml" />
	
	<!-- properties for JEM core project -->
	<property name="jem.core.resources.folder" value="${jem.core.folder}/resources" />
	<property name="jem.core.working.folder" value="${jem.core.folder}/work" />
	<property name="jem.core.working.jemhome.folder" value="${jem.core.working.folder}/jemhome" />
	<property name="jem.core.working.jemhome.library.folder" value="${jem.core.working.jemhome.folder}/lib" />
	<property name="jem.core.working.jemhome.library.plugins.folder" value="${jem.core.working.jemhome.library.folder}/plugins" />
	<property name="jem.core.distribute.folder" value="${jem.core.folder}/dist" />
	<property name="jem.core.zip.file" value="jem.zip" />
	<property name="jem.core.zip.file.location" value="${jem.core.distribute.folder}/${jem.core.zip.file}" />
</project>